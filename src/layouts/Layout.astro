---
import Navbar from '../components/Navbar.astro';
import '../styles/global.scss';
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<main>
			<slot /> </main>
	</body>
</html>

<style is:global>
  body, html {
    margin: 0;
    padding: 0;
    font-family: sans-serif;
  }
</style>