---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home | Atypical">
  <section class="hero">
    <h1>Atypical Complex Time Signatures</h1>
    <p>Exploring the math and feel behind odd meters and polyrhythms.</p>
    <button>Start Exploring</button>
  </section>

  <section class="content">
    <h2>Latest Theory</h2>
    <p>This is where your main articles or project links will go.</p>
  </section>
</Layout>

<style lang="scss">
  .hero {
    padding: 4rem 2rem;
    text-align: center;
    background: #f4f4f4;

    h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    p {
      font-size: 1.2rem;
      color: #666;
    }
  }

  .content {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }
</style>